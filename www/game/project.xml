<?xml version="1.0"?>
<project title="Spark Demo" version="1.0">
  <assets path="assets/">

    <!-- player images -->
    <asset src="player.png" class="spark.graphics.Texture" />
    <asset src="laser.png" class="spark.graphics.Texture" />
    <asset src="thrust.png" class="spark.graphics.Texture" />

    <!-- asteroid images -->
    <asset src="asteroid_big_1.png" class="spark.graphics.Texture" />
    <asset src="asteroid_big_2.png" class="spark.graphics.Texture" />
    <asset src="asteroid_big_3.png" class="spark.graphics.Texture" />
    <asset src="asteroid_big_4.png" class="spark.graphics.Texture" />
    <asset src="asteroid_particle_1.png" class="spark.graphics.Texture" />

    <!-- particle emitters -->
    <asset src="thrust.json" class="spark.graphics.Emitter" />
    <asset src="explosion.json" class="spark.graphics.Emitter" />

    <!-- sounds -->
    <asset src="laser.mp3" class="spark.audio.Sound" />
    <asset src="explosion.mp3" class="spark.audio.Sound" />
    <asset src="reload.mp3" class="spark.audio.Sound" />

    <!-- timeline animations -->
    <asset src="shake.json" class="spark.anim.Timeline" />
    <asset src="spawn.json" class="spark.anim.Timeline" />
  </assets>
</project>
