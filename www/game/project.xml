<?xml version="1.0"?>
<project title="Spark Demo" version="1.0">
  <assets path="assets/">

    <!-- background images -->
    <asset id="stars" src="background.png" class="spark.graphics.Texture" />

    <!-- player images -->
    <asset id="spaceship" src="player.png" class="spark.graphics.Texture" />
    <asset src="laser.png" class="spark.graphics.Texture" />
    <asset src="thrust.png" class="spark.graphics.Texture" />

    <!-- asteroid images -->
    <asset src="asteroids.xml" class="spark.graphics.Atlas" />

    <!-- fonts -->
    <asset src="BulletproofBB.otf" class="spark.graphics.Font" />
    <asset src="virgo.ttf" class="spark.graphics.Font" />

    <!-- particle emitters -->
    <asset src="thrust.xml" class="spark.graphics.Emitter" />
    <asset src="explosion.xml" class="spark.graphics.Emitter" />

    <!-- sounds -->
    <asset src="laser.mp3" class="spark.audio.Sound" />
    <asset src="explosion.mp3" class="spark.audio.Sound" />
    <asset src="reload.mp3" class="spark.audio.Sound" />

    <!-- timeline animations -->
    <asset src="shake.xml" class="spark.anim.Timeline" />
    <asset src="spawn.xml" class="spark.anim.Timeline" />
  </assets>
</project>
